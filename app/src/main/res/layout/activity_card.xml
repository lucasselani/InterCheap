<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_menu_manage"/>
        <TextView
            android:id="@+id/txLocal"
            android:text="LOCAL"
            android:layout_width="match_parent"
            android:layout_height="37.5dp"
            android:layout_toRightOf="@+id/img"
            android:paddingLeft="5dp"/>
        <TextView
            android:id="@+id/txType"
            android:text="TYPE"
            android:layout_width="115dp"
            android:layout_height="37.5dp"
            android:layout_below="@+id/txLocal"
            android:layout_toRightOf="@+id/img"
            android:paddingLeft="5dp"/>
        <TextView
            android:id="@+id/txDuration"
            android:text="DURATION"
            android:layout_width="115dp"
            android:layout_height="37.5dp"
            android:layout_below="@+id/txLocal"
            android:layout_toRightOf="@+id/txType"
            android:paddingLeft="5dp"/>
        <TextView
            android:id="@+id/txPrice"
            android:text="PRICE"
            android:layout_width="match_parent"
            android:layout_height="37.5dp"
            android:layout_below="@+id/txType"
            android:layout_toRightOf="@+id/img"
            android:paddingLeft="5dp"/>
        <TextView
            android:id="@+id/txAgency"
            android:text="AGENCY"
            android:layout_width="match_parent"
            android:layout_height="37.5dp"
            android:layout_below="@+id/txPrice"
            android:layout_toRightOf="@+id/img"
            android:paddingLeft="5dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>